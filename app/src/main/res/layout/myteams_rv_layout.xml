<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2E3D4C">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="1dp"
        android:background="#1D2833"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1D2833">


            <TextView
                android:id="@+id/teamName_myTeams"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="214dp"
                android:text="Desiderdata"
                android:textColor="#E7EFEF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hackName_myTeams"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:layout_below="@+id/teamName_myTeams"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="289dp"
                android:layout_marginBottom="128dp"
                android:text="Code2Create"
                android:textColor="#979797"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Position_myTeams"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="302dp"
                android:layout_marginBottom="100dp"
                android:text="Leader"
                android:textColor="#E7EFEF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamName_myTeams"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="6dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/Domain1_Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="#1D2833"
                    android:text="Frontend"
                    android:textAlignment="center"
                    android:textColor="#1EA54C"
                    app:chipStrokeColor="@color/pill_color"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/Domain2_Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="#1D2833"
                    android:text="Backend"
                    android:textAlignment="center"
                    android:textColor="#1EA54C"
                    app:chipStrokeColor="@color/pill_color"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/Domain3_Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="#1D2833"
                    android:text="Machine Learning"
                    android:textAlignment="center"
                    android:textColor="#1EA54C"
                    app:chipStrokeColor="@color/pill_color"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/Domain4_Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="#1D2833"
                    android:text="Machine Learning"
                    android:textAlignment="center"
                    android:textColor="#1EA54C"
                    app:chipStrokeColor="@color/pill_color"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/Domain5_Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="#1D2833"
                    android:text="Mobile Dev"
                    android:textAlignment="center"
                    android:textColor="#1EA54C"
                    app:chipStrokeColor="@color/pill_color"
                    app:chipStrokeWidth="2dp" />

            </com.google.android.material.chip.ChipGroup>

            <ImageView
                android:id="@+id/particularTeam_view"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="348dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="127dp"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>