<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:backgroundTint="#1D2833"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1D2833">

            <TextView
                android:id="@+id/serialNo"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="333dp"
                android:layout_marginBottom="38dp"
                android:text="1."
                android:textColor="#E7EFEF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginBottom="9dp"
                app:srcCompat="@drawable/imageholder" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="143dp"
                android:layout_marginBottom="57dp"
                android:text="Deep Gandhi"
                android:textColor="#E7EFEF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberEmail"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="20dp"
                android:text="itsverydeep@gmail.com"
                android:textColor="#979797"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/memberPosition"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="261dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="59dp"
                android:text="Leader"
                android:textColor="#1EA54C"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leaveOption"
                android:layout_width="56dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="60dp"
                android:text="Leave"
                android:textColor="#1EA54C"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>