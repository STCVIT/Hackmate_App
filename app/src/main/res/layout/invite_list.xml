<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/card_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/participantProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inviteImg"
            android:src="@drawable/bhavik"
            android:layout_width="67dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="67dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="104dp"
            android:layout_marginLeft="15dp"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintLeft_toRightOf="@id/inviteImg"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/inviteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhavik Agrawal"
                android:textColor="@color/text"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/inviteDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background"
                android:text="App Dev"
                android:textColor="@color/pill_color"
                app:chipStrokeColor="@color/pill_color"
                app:chipStrokeWidth="2dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendInviteButton"
            android:layout_width="78dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_buttongradient"
            android:text="INVITE"
            android:textColor="@color/text"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>